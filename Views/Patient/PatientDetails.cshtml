@model IMSProject.Models.PatientWithImages

@{
    ViewData["Title"] = "Patient Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Include Bootstrap CSS if it's not already included in the Layout -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="text-center">@Model.Name's Details</h2>
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Patient Information</h3>
            <p><strong>Patient ID:</strong> @Model.PatientID</p>
            <p><strong>Address:</strong> @Model.Address</p>
            <p><strong>Contact Number:</strong> @Model.ContactNumber</p>
            <p><strong>Date of Birth:</strong> @Model.DateofBirth.ToString("d")</p>
            <p><strong>Medical Condition:</strong> @Model.MedicalCondition</p>
            <p><strong>Diagnosis:</strong> @Model.Diagnosis</p>
            <p><strong>Total Cost:</strong> @Model.TotalCost.ToString("C")</p>
        </div>
    </div>

    <div class="mt-4">
        <h4>Medical Images</h4>
        @if (Model.MedicalImages != null && Model.MedicalImages.Any())
        {
            <div class="row">
                @foreach (var image in Model.MedicalImages)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <img src="@image.ImageURL" class="card-img-top" alt="Medical Image" />
                            <div class="card-body">
                                <h5 class="card-title">@image.DiseaseType</h5>
                                <p><strong>Image Type:</strong> @image.ImageType</p>
                                <p><strong>Upload Date:</strong> @image.UploadDate.ToString("d")</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info">No medical images available for this patient.</div>
        }
    </div>
</div>

<!-- Optionally, you can include Bootstrap's JS if you need any interactive elements like modals or dropdowns -->


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

