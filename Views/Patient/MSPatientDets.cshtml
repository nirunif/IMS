@model IEnumerable<IMSProject.Models.Patient>

@{
    ViewData["Title"] = "Patient Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Add Bootstrap CSS -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h2>Patient Details</h2>

    <!-- Patient Details Table -->
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Date of Birth</th>
                <th>Contact Number</th>
                <th>Medical Condition</th>
                <th>Diagnosis</th>
                <th>Total Cost</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var patient in Model)
            {
    <tr>
        <td>@patient.Name</td>
        <td>@patient.Address</td>
        <td>@patient.DateofBirth.ToString("dd/MM/yyyy")</td>
        <td>@patient.ContactNumber</td>
        <td>@patient.MedicalCondition</td>
        <td>@patient.Diagnosis</td>
        <td>@patient.TotalCost.ToString("C2")</td>
        <td>
            <a href="@Url.Action("Details", "Patient", new { id = patient.PatientID })" class="btn btn-info"><i class="fas fa-eye"></i></a>

            <a href="@Url.Action("Edit", "Patient", new { id = patient.PatientID })" class="btn btn-warning btn-sm">
                <i class="fas fa-edit"></i>
            </a>

        </td>
    </tr>}
        </tbody>
    </table>

    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Dashboard</a>
</div>

<!-- Add Bootstrap JS and dependencies -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
