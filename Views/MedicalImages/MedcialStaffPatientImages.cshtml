@model List<IMSProject.Models.PatientWithImages>

@{
    ViewData["Title"] = "Patients with Images";
}

<h2>Patients with Images</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Patient Name</th>
            <th>Disease Type</th>
            <th>Image Type</th>
            <th>Image URL</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var image in Model)
            {
    <tr>
        <td>@image.Name</td>
        <td>@image.DiseaseType</td>
        <td>@image.ImageType</td>
        <td>
            <a href="@Url.Content("~/" + image.ImageURL)" target="_blank">@image.ImageURL</a>
        </td>
        <td>
            <a href="@Url.Action("Details", "MedicalImages", new { id = image.ImageID })" class="btn btn-info btn-sm">Details</a>
            <a href="@Url.Action("Edit", "MedicalImages", new { id = image.ImageID })" class="btn btn-warning btn-sm">Edit</a>
            <a href="@Url.Action("Delete", "MedicalImages", new { id = image.ImageID })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this image?');">Delete</a>
        </td>
    </tr> }
                }
                else
                {
    <tr>
        <td colspan="5" class="text-center">No medical images found.</td>
    </tr>            }
    </tbody>
</table>
