@model IEnumerable<IMSProject.Models.PatientWithImages>

@{
    ViewData["Title"] = "Medical Images";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h2>Medical Images</h2>
    <a href="@Url.Action("Create", "MedicalImages")" class="btn btn-primary mb-3">Add New Image</a>

    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Patient Name</th>
                <th>Disease Type</th>
                <th>Image Type</th>
                <th>Image URL</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var image in Model)
                {
                    <tr>
                        <td>@image.Name</td>
                        <td>@image.DiseaseType</td>
                        <td>@image.ImageType</td>
                        <td>
                            <a href="@Url.Content("~/" + image.ImageURL)" target="_blank">@image.ImageURL</a>
                        </td>
                        <td>
                            <a href="@Url.Action("Details", "MedicalImages", new { id = image.ImageID })" class="btn btn-info btn-sm">Details</a>
                            <a href="@Url.Action("Edit", "MedicalImages", new { id = image.ImageID })" class="btn btn-warning btn-sm">Edit</a>
                            <a href="@Url.Action("Delete", "MedicalImages", new { id = image.ImageID })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this image?');">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">No medical images found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
