@model IEnumerable<IMSProject.Models.Patient>
@{
    ViewData["Title"] = "Reports";
}

<h2>Search Patients</h2>
<form asp-action="Index" method="get" class="d-flex">
    <input type="text" class="form-control me-2" name="searchQuery" value="@ViewData["SearchQuery"]" placeholder="Search by patient name, number..." />
    <button type="submit" class="btn btn-secondary">Search</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Patient Name</th>
            
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model)
        {
            <tr>
                <td>@patient.Name</td>
                <td>
                    <a asp-action="GetReport" asp-route-id="@patient.PatientID" class="btn btn-primary">Get Report</a>
                </td>
            </tr>
        }
    </tbody>
</table>
