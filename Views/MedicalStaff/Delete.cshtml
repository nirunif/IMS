@model IMSProject.Models.MedicalStaff

@{
    ViewData["Title"] = "Delete Medical Staff";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-6">
    <h2 class="text-center mb-4">Delete Medical Staff</h2>

    <div class="text-center">
        <p>Are you sure you want to delete this medical staff record?</p>
        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>Role:</strong> @Model.Role</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Contact:</strong> @Model.ContactNumber</p>
        <p><strong>Specialty:</strong> @Model.Specialty</p>
        <p><strong>DateOfJoining:</strong> @Model.DateOfJoining</p>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" name="MedicalStaffID" value="@Model.MedicalStaffID" />
            <button type="submit" class="btn btn-danger btn-sm">
                <i class="fas fa-trash-alt"></i> Confirm Delete
            </button>
            <a href="@Url.Action("Index", "MedicalStaff")" class="btn btn-secondary btn-sm">
                <i class="fas fa-times"></i> Cancel
            </a>
        </form>
    </div>
</div>
