<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IMSProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        /* Make the body take full height */
        html, body {
            height: 100%;
            margin: 0;
        }

        /* Use flexbox for the page layout */
        .page-wrapper {
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        /* Main content should take available space */
        .main-content {
            flex-grow: 1;
        }

        /* Footer styles */
        footer {
            margin-top: auto;
        }
    </style>
</head>
<body class="page-wrapper">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo/logo.png" alt="IMS Logo" style="height: 40px; width: auto;" />
                   
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @*<li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>*@

                        <!-- Show only for Admin, Doctor, or Radiologist roles -->
                        @if (ViewBag.UserRole == "Doctor" || ViewBag.UserRole == "Radiologist")
                        {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Patient" asp-action="Index">Patient</a>
                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="MedicalStaff" asp-action="Index">Medical Staff</a>
                                    </li>
                                                    <li class="nav-item">
                                                        <a class="nav-link text-dark" asp-area="" asp-controller="MedicalImages" asp-action="Index">Medical Images</a>
                                                    </li>
                                                                    <li class="nav-item">
                                                                        <a class="nav-link text-dark" asp-area="" asp-controller="Reports" asp-action="Index">Reports</a>
                                                                    </li>
                                                                                    
                                                                                    }

                        @if (ViewBag.UserRole == "Admin")
                        {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Patient" asp-action="Index">Patient</a>
                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="MedicalStaff" asp-action="Index">Medical Staff</a>
                                    </li>
                                                    <li class="nav-item">
                                                        <a class="nav-link text-dark" asp-area="" asp-controller="MedicalImages" asp-action="Index">Medical Images</a>
                                                    </li>
                                                                    <li class="nav-item">
                                                                        <a class="nav-link text-dark" asp-area="" asp-controller="Reports" asp-action="Index">Reports</a>
                                                                    </li>
                                                                                    <li class="nav-item">
                                                                                        <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">Users</a>
                                                                                    </li>
                                                                                    }

                       

                        <!-- Show only for Patient role -->
                        @if (ViewBag.UserRole == "Patient")
                        {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Patient" asp-action="Index">Patient</a>
                    </li>}
                    </ul>

                    <!-- Login/Logout Link -->
                    <ul class="navbar-nav">
                        @if (ViewBag.UserRole != null)
                        {<!-- If logged in, show Logout -->
                            <li class="nav-item">
                                <a class="btn btn-danger" asp-area="" asp-controller="Users" asp-action="Logout">Logout</a>
                            </li>

                        }
                        else
                        { <!-- If not logged in, show Login -->
                            <li class="nav-item">

                                <a class="btn btn-info" asp-area="" asp-controller="Users" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4 main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
